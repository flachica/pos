<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_res_config_settings_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <block id="pos_interface_section" position="after">
                <block title="Sale Order Creation" id="create_sale_order">
                    <setting id="pos_iface_create_draft_sale_order">
                        <field name="pos_iface_create_draft_sale_order" readonly="pos_has_active_session"/>
                        <div class="content-group mt16" invisible="not pos_iface_create_draft_sale_order">
                            <div class="text-warning" id="warning_text_employees">
                                Save this page and come back here to set up the feature.
                            </div>
                        </div>
                    </setting>

                    <setting id="pos_iface_create_confirmed_sale_order">
                        <field name="pos_iface_create_confirmed_sale_order" readonly="pos_has_active_session"/>
                        <div class="content-group mt16" invisible="not pos_iface_create_confirmed_sale_order">
                            <div class="text-warning" id="warning_text_employees">
                                Save this page and come back here to set up the feature.
                            </div>
                        </div>
                    </setting>

                    <setting id="pos_iface_create_delivered_sale_order">
                        <field name="pos_iface_create_delivered_sale_order" readonly="pos_has_active_session"/>
                        <div class="content-group mt16" invisible="not pos_iface_create_delivered_sale_order">
                            <div class="text-warning" id="warning_text_employees">
                                Save this page and come back here to set up the feature.
                            </div>
                        </div>
                    </setting>

                    <setting id="pos_iface_create_invoiced_sale_order">
                        <field name="pos_iface_create_invoiced_sale_order" readonly="pos_has_active_session"/>
                        <div class="content-group mt16" invisible="not pos_iface_create_invoiced_sale_order">
                            <div class="text-warning" id="warning_text_employees">
                                Save this page and come back here to set up the feature.
                            </div>
                        </div>
                    </setting>


                </block>


            </block>
        </field>
    </record>
</odoo>
